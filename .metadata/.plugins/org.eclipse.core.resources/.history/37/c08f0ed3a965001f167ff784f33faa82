package com.motorPM.service;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import org.springframework.http.HttpEntity;
import org.springframework.http.HttpHeaders;
import org.springframework.http.MediaType;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.ObjectMapper;
import com.motorPM.domain.FlaskDomain;
import com.motorPM.persistence.TestRepository;

import jakarta.transaction.Transactional;
import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class PMFlaskService {
	
	private final TestRepository tr;
	private final ObjectMapper obmap;

	@Transactional
	public String flasktest() throws JsonProcessingException {
		
		RestTemplate rt = new RestTemplate();
		
		HttpHeaders hh = new HttpHeaders();
		hh.setContentType(MediaType.APPLICATION_JSON);
				
		List<FlaskDomain> list = new ArrayList<>();
		
		List<Object[]> objs = tr.test();
		
		for	(Object[] obj : objs) {
			list.add(FlaskDomain.builder()
					.id((Integer)obj[0])
					.date((Date)obj[1])
					.build());
		}
		String params = obmap.writeValueAsString(list);
		
		HttpEntity<String> entity = new HttpEntity<>(params, hh);
		String url = "http://127.0.0.1:5000/flask";
		
		return rt.postForObject(url, entity, String.class);
	}

}
